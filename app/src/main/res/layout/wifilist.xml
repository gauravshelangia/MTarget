<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dp"
    tools:context="com.example.gaurav.mtarget.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Networks with details"
            android:background="#b3f9ff"
            android:layout_marginBottom="3dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/rawdata"
            android:background="#F5F5F5"
            android:dividerHeight="1dp"
            android:divider="#7aa9ca"
            android:layout_marginBottom="1mm"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="scan"
                android:text="Re-Scan"
                android:layout_marginRight="1dp"
                android:background="#40C4FF"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="storedetails"
                android:text="Store Details"
                android:layout_marginLeft="1dp"
                android:background="#40C4FF"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
